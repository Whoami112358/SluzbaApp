@{
    ViewData["Title"] = "Logowanie";
    <link href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel="stylesheet">
}

<h1 style="text-align: center; color: #2C3E50; font-family: 'Impact', sans-serif; text-shadow: 2px 2px #000;">
    <img src="/images/Godlo_wat.png" alt="Logo wojskowe" style="height: 50px; vertical-align: middle;" />
    Panel Logowania
</h1>

@if (ViewBag.Error != null)
{
    <p style="color: red; font-weight: bold; text-align: center; font-family: 'Arial', sans-serif;">
        @ViewBag.Error
    </p>
}

<div style="background-color: #2A2F33; color: #EEE; padding: 20px; max-width: 400px; margin: 0 auto; border-radius: 10px; border: 2px solid #3E5057; font-family: 'Arial', sans-serif;">
    <form method="post" asp-controller="Account" asp-action="Login" style="margin: 0 auto;">
        @Html.AntiForgeryToken()

        <div style="margin-bottom: 15px;">
            <label for="login" style="font-size: 1.2em; font-weight: bold;">Login:</label>
            <input type="text" id="login" name="login" required
                   style="width: 100%; padding: 10px; border: 1px solid #3E5057; border-radius: 5px; background-color: #1C1F22; color: #EEE;" />
        </div>

        <div style="margin-bottom: 15px;">
            <label for="haslo" style="font-size: 1.2em; font-weight: bold;">Hasło:</label>
            <input type="password" id="haslo" name="haslo" required
                   style="width: 100%; padding: 10px; border: 1px solid #3E5057; border-radius: 5px; background-color: #1C1F22; color: #EEE;" />
        </div>

        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

        <button type="submit"
                style="background-color: #4CAF50; color: #FFF; font-weight: bold; border: none; padding: 10px 15px; border-radius: 5px; width: 100%; cursor: pointer; font-size: 1.2em;">
            Zaloguj się
        </button>
    </form>
</div>

<footer style="text-align: center; margin-top: 20px; color: #AAA; font-family: 'Courier New', monospace; font-size: 0.9em;">
    © 2024 Wojskowy Panel Logowania
</footer>
