@{
    ViewData["Title"] = "Panel Administratora";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        /* Tło strony */
        body {
            font-family: Arial, sans-serif;
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ecf0f1; /* Jasny tekst */
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Nagłówek */
        header {
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #27ae60; /* Jasny zielony dla nagłówka */
            text-align: center;
            padding: 20px 0;
        }

            header h1 {
                font-size: 2.5em;
                color: #27ae60; /* Jasny zielony nagłówka */
            }

        /* Nawigacja */
        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
            justify-content: center;
            background-color: #34495e; /* Ciemny odcień zieleni dla tła */
            padding: 10px;
        }

            nav ul li {
                display: inline;
            }

                nav ul li a {
                    color: #ecf0f1;
                    text-decoration: none;
                    font-weight: bold;
                    transition: color 0.3s ease;
                }

                    nav ul li a:hover {
                        color: #1abc9c; /* Jasny zielony przy hover */
                    }

        /* Kontener z zawartością */
        .content {
            max-width: 1200px;
            margin: 40px auto;
            background-color: #34495e; /* Ciemny odcień zieleni */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            /* Tekst w kontenerze */
            .content h1 {
                color: #27ae60; /* Jasny zielony nagłówka */
            }

            .content p {
                color: #7f8c8d; /* Brązowy odcień dla tekstu */
                font-size: 1.2em;
                line-height: 1.6;
            }

        /* Stopka */
        footer {
            background-color: #34495e; /* Ciemny kolor stopki */
            color: #ecf0f1;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        /* Wiadomości o błędach */
        p {
            color: #7f8c8d; /* Brązowy odcień dla tekstu */
            font-size: 1.1em;
        }
    </style>
</head>
<body>
    <header>
        <h1>Panel Administratora</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Admin/Soldiers">Tabela Żołnierzy</a></li>
            <li><a href="/Admin/Schedule">Tabela Harmonogramu</a></li>
            <li><a href="/AdminLogout/Logout">Wyloguj się</a></li>
        </ul>
    </nav>

    <div class="content">
        <h1>Panel Administratora</h1>
        <p>Witaj w panelu administratora</p>
    </div>

    <footer>
        <p>&copy; 2024 Twoja Aplikacja</p>
    </footer>
</body>
</html>
