@model IEnumerable<WebApplication2.Models.Harmonogram>

@{
    ViewData["Title"] = "Tabela Harmonogramu";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/Admin">Panel Administratora</a></li>
                <li><a href="/Admin/Soldiers">Tabela Żołnierzy</a></li>
                <li><a href="/AdminLogout/Logout">Wyloguj się</a></li>
            </ul>
        </nav>
    </header>

    <div class="content">
        <h1>@ViewData["Title"]</h1>
        <li><a href="/Admin/AddSchedule">Dodaj Harmonogram</a></li>
        <table>
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Miesiąc</th>
                    <th>Żołnierz</th>
                    <th>Służba</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.Data.ToShortDateString()</td>
                        <td>@schedule.Miesiac</td>
                        <td>@(schedule.Zolnierz != null ? $"{schedule.Zolnierz.Imie} {schedule.Zolnierz.Nazwisko}" : "Brak")</td>
                        <td>@(schedule.Sluzba != null ? schedule.Sluzba.Rodzaj : "Brak")</td>
                    </tr>
                }
            </tbody>
        </table>
        <li><a href="/Admin/AddSchedule">Dodaj Harmonogram</a></li>
    </div>

    <footer>
        <p>&copy; 2024 Twoja Aplikacja</p>
    </footer>
</body>
</html>
