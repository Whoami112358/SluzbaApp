@model IEnumerable<WebApplication2.Models.Harmonogram>

@{
    ViewData["Title"] = "Tabela Harmonogramu";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        /* Tło strony */
        body {
            font-family: Arial, sans-serif;
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ecf0f1; /* Jasny tekst */
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Nagłówek */
        header {
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #27ae60; /* Jasny zielony dla nagłówka */
            text-align: center;
            padding: 20px 0;
        }

            header h1 {
                font-size: 2.5em;
                color: #27ae60; /* Jasny zielony nagłówka */
            }

        /* Nawigacja */
        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
            justify-content: center;
            background-color: #34495e; /* Ciemny odcień zieleni dla tła */
            padding: 10px;
        }

            nav ul li {
                display: inline;
            }

                nav ul li a {
                    color: #ecf0f1;
                    text-decoration: none;
                    font-weight: bold;
                    transition: color 0.3s ease;
                }

                    nav ul li a:hover {
                        color: #1abc9c; /* Jasny zielony przy hover */
                    }

        /* Kontener z zawartością */
        .content {
            max-width: 1200px;
            margin: 40px auto;
            background-color: #34495e; /* Ciemny odcień zieleni */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Tabela */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            table th, table td {
                padding: 10px;
                text-align: left;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #27ae60; /* Jasny zielony dla nagłówków */
                color: black;
            }

            table td {
                background-color: #ecf0f1; /* Jasny szary dla komórek tabeli */
                color: #2c3e50; /* Ciemniejszy tekst w tabeli */
            }

        /* Linki w tabeli */
        a {
            color: #1abc9c; /* Jasny zielony dla linków */
            text-decoration: none;
        }

            a:hover {
                color: #34495e; /* Ciemniejszy zielony przy hover */
            }

        footer {
            background-color: #34495e; /* Ciemny kolor stopki */
            color: #ecf0f1;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        /* Wiadomości o błędach */
        p {
            color: #7f8c8d; /* Brązowy odcień dla tekstu */
            font-size: 1.1em;
        }
    </style>
</head>
<body>
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Admin">Panel Administratora</a></li>
            <li><a href="/Admin/Soldiers">Tabela Żołnierzy</a></li>
            <li><a href="/AdminLogout/Logout">Wyloguj się</a></li>
        </ul>
    </nav>

    <div class="content">
        <h2>@ViewData["Title"]</h2>

        <!-- Dodaj Harmonogram Link -->
        <li><a href="/Admin/AddSchedule">Dodaj Harmonogram</a></li>

        <table>
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Miesiąc</th>
                    <th>Żołnierz</th>
                    <th>Służba</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.Data.ToShortDateString()</td>
                        <td>@schedule.Miesiac</td>
                        <td>@(schedule.Zolnierz != null ? $"{schedule.Zolnierz.Imie} {schedule.Zolnierz.Nazwisko}" : "Brak")</td>
                        <td>@(schedule.Sluzba != null ? schedule.Sluzba.Rodzaj : "Brak")</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Link do dodawania harmonogramu -->
        <li><a href="/Admin/AddSchedule">Dodaj Harmonogram</a></li>
    </div>

    <footer>
        <p>&copy; 2024 Twoja Aplikacja</p>
    </footer>
</body>
</html>
