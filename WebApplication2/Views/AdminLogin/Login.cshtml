@{
    ViewData["Title"] = "Logowanie Administratora";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Logowanie Administratora - Twoja Aplikacja</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        /* Tło strony */
        body {
            font-family: Arial, sans-serif;
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ecf0f1; /* Jasny tekst */
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Nagłówek */
        header {
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #27ae60; /* Jasny zielony dla nagłówka */
            text-align: center;
            padding: 20px 0;
        }

            header h1 {
                font-size: 2.5em;
                color: #27ae60; /* Jasny zielony nagłówka */
            }

        /* Formularz (container) */
        .content {
            max-width: 600px;
            margin: 40px auto;
            background-color: #34495e; /* Ciemny odcień zieleni */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Etykiety formularza */
        label {
            display: block;
            margin: 10px 0 5px;
            color: #27ae60; /* Ciemniejszy odcień zieleni */
            font-weight: bold;
        }

        /* Pola formularza */
        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 10px;
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ecf0f1; /* Jasny tekst */
            border: 2px solid #27ae60; /* Zielona ramka */
            border-radius: 4px;
            margin-bottom: 15px;
        }

        /* Styl przycisku */
        button[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #1abc9c; /* Jasny zielony */
            color: #fff;
            font-size: 1.2em;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #16a085; /* Ciemniejszy odcień zieleni przy hover */
            }

        /* Wiadomości o błędach */
        p {
            color: #7f8c8d; /* Brązowy odcień dla tekstu */
            font-size: 1.1em;
        }

        .error-message {
            background-color: rgba(231, 76, 60, 0.1); /* Przezroczyste tło jasno-czerwone */
            color: #e74c3c; /* Czerwony tekst */
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
        }

        footer {
            background-color: #34495e;
            color: #ecf0f1;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

    </style>
</head>
<body>
    <header>
        <h1>Logowanie Administratora</h1>
    </header>

    <div class="content">
        @if (ViewBag.Error != null)
        {
            <p class="error-message">@ViewBag.Error</p>
        }

        <form method="post" asp-action="Login">
            @Html.AntiForgeryToken()

            <!-- Ukryte pole dla returnUrl -->
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <div>
                <label for="Username">Nazwa użytkownika:</label>
                <input type="text" id="Username" name="username" required />
            </div>

            <div>
                <label for="Password">Hasło:</label>
                <input type="password" id="Password" name="password" required />
            </div>

            <button type="submit">Zaloguj się</button>
        </form>
    </div>

    <footer>
        <p>&copy; 2024 Twoja Aplikacja</p>
    </footer>
</body>
</html>
