@model IEnumerable<WebApplication2.Models.Harmonogram>

@{
    ViewData["Title"] = "KALENDARZ SŁUŻB";
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin-left: auto;
            margin-right: auto;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../kalendarzbg.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ecf0f1;
            height: 100vh;
            width: 100vh;
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            text-align: center;
            font-size: 48px;
            color: #ffffff;
            margin-top: 20px;
            margin-bottom: 40px;

        }


        footer {
            text-align: center;
            padding: 10px;
            color: #ffffff;
            font-size: 14px;
            position: relative;
            margin-top: auto;
        }

            footer button {
                position: absolute;
                bottom: 10px;
                left: 10px;
                border: none;
                background: none;
                padding: 0;
                cursor: pointer;
            }

                footer button img {
                    width: 25px;
                    height: 24px;
                    display: block;
                }

        #calendar {
            max-width: 100%;
            position: center;
            background-color: rgba(119, 131, 83, 0.6);
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            justify-content: center;
        }

        .fc-toolbar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .fc-button {
            background-color: rgba(15, 24, 16, 0.6);
            color: white;
            border: none;
            border-radius: 15px;
            padding: 10px 15px;
            font-family: 'Poppins', Arial, sans-serif;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .fc-button:hover {
                background-color: rgba(119, 131, 83, 1);
            }

        .fc-toolbar-title {
            font-size: 36px;
            color: white;
        }

        .fc-daygrid-day {
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .fc-daygrid-day-number {
            color: white;
            font-weight: bold;
        }

        .fc-event {
            background-color: rgba(93, 100, 80, 1) !important;
            color: white !important;
            border: none !important;
            border-radius: 10px !important;
            padding: 5px 10px !important;
            text-align: center;
            font-size: 14px;
        }

        .fc-daygrid-event-dot {
            display: none;
        }
    </style>
</head>
<body>
    <div id=".content">
    <h1>@ViewData["Title"]</h1>
    <div id="calendar"></div>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'today prev,next',
                    center: 'title',
                    right: ''
                },
                locale: 'pl',
                events: [
        @foreach (var item in Model)
        {
            <text>
                                {
                                    title: "@(item.Sluzba?.Rodzaj ?? "Służba")",
                                    start: "@item.Data.ToString("yyyy-MM-dd")",
                                    allDay: true
                                },
            </text>
        }
                ],
                eventBackgroundColor: 'rgba(93, 100, 80, 1)',
                eventTextColor: 'white',
            });

            calendar.render();
        });
    </script>
    </div>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
        <button onclick="location.href='@Url.Action("Index", "Home")'">
            <img src="../back.png" alt="Powrót" />
        </button>
    </footer>
</body>

</html>
