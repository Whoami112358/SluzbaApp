@{
    ViewData["Title"] = "DYSPOZYCYJNOŚĆ";
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0 auto;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../kalendarzbg.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            color: #ecf0f1;
            height: 100vh;
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            text-align: center;
            font-size: 48px;
            color: #ffffff;
            margin-top: 20px;
            margin-bottom: 40px;
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #ffffff;
            font-size: 14px;
        }

        #calendar {
            width: 70%;
            position: center;
            background-color: rgba(172, 174, 165, 0.5);
            margin: auto;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .fc-toolbar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .fc-button {
            background-color: rgba(93, 100, 80, 1) !important; /* Kolor jak w wydarzeniach */
            color: white !important;
            border: none;
            border-radius: 15px;
            padding: 10px 15px;
            font-family: 'Poppins', Arial, sans-serif;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            .fc-button:hover {
                background-color: rgba(119, 131, 83, 1) !important; /* Lekko jaśniejszy przy najechaniu */
            }

        .fc-toolbar-title {
            font-size: 36px;
            color: white;
        }

        .fc-daygrid-day {
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .fc-daygrid-day-number {
            color: white;
            font-weight: bold;
        }

        /* Styl dla wydarzeń */
        .fc-event {
            background-color: rgba(93, 100, 80, 1) !important; /* Zielony kolor */
            color: white !important;
            border: none !important;
            border-radius: 10px !important;
            padding: 5px 10px !important;
            text-align: left; /* Wyrównanie do lewej */
            font-size: 14px;
            white-space: normal !important; /* Wymuszenie zawijania tekstu */
            line-height: 1.2; /* Zwiększony odstęp między liniami */
        }

        /* Dynamiczna wysokość komórek */
        .fc-daygrid-day-frame {
            height: auto !important;
        }

        /* Przewijanie dla dni z wieloma wydarzeniami */
        .fc-daygrid-day-events {
            max-height: 120px; /* Maksymalna wysokość wydarzeń */
            overflow-y: auto; /* Dodanie scrolla, jeśli wydarzeń jest za dużo */
        }

        /* Ukrycie kropek przy wydarzeniach */
        .fc-daygrid-event-dot {
            display: none;
        }

        .goback-butt {
            position: fixed;
            bottom: -20px;
            left: 10px;
            z-index: 1;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <div class="container">
        <!-- Sekcja błędów ModelState -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div style="color: red;">
                <ul>
                    @foreach (var state in ViewData.ModelState)
                    {
                        foreach (var err in state.Value.Errors)
                        {
                            <li>@err.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <!-- Form do wyboru miesiąca/roku -->
        <form asp-action="AnalizaDostepnosci" method="post" id="monthYearForm">
            @Html.AntiForgeryToken()
            <label>Miesiąc:</label>
            <select name="month" id="month-select">
                @foreach (var m in ViewBag.Months as List<int>)
                {
                    bool selected = (m == (ViewBag.CurrentMonth ?? 0));
                    <option value="@m" selected="@(selected)">@m</option>
                }
            </select>

            <label>Rok:</label>
            <select name="year" id="year-select">
                @foreach (var y in ViewBag.Years as List<int>)
                {
                    bool selected = (y == (ViewBag.CurrentYear ?? 0));
                    <option value="@y" selected="@(selected)">@y</option>
                }
            </select>

            <button type="submit">Pokaż</button>
        </form>

        <!-- Kalendarz, tylko jeśli mamy eventy w ViewBag.EventsJson -->
        @if (ViewBag.EventsJson != null)
        {
            <div id="calendar"></div>
        }
    </div>

    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
        <div class="goback-butt">
            <button onclick="location.href='@Url.Action("DowodcaView", "Dowodca")'">
                <img src="../back.png" alt="Powrót" style="width: 25px; height: 24px;" />
            </button>
        </div>
    </footer>

    @if (ViewBag.EventsJson != null)
    {
        <!-- Ładujemy skrypt FullCalendar TYLKO gdy mamy events -->
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var calendarEl = document.getElementById('calendar');
                var calendarEvents = @Html.Raw(ViewBag.EventsJson);
                var dayInfo = @Html.Raw(ViewBag.DayInfoJson);

                // Składamy datę: YYYY-MM-01
                var initDate = '@(ViewBag.CurrentYear + "-" + (ViewBag.CurrentMonth.ToString("D2")) + "-01")';

                var startRange = initDate;
                var endRange = '@(ViewBag.CurrentYear + "-" + ((ViewBag.CurrentMonth < 12 ? ViewBag.CurrentMonth + 1 : 1).ToString("D2")) + "-01")';

                var calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                    headerToolbar: {
                        left: 'prev,next',
                        center: 'title',
                        right: ''
                    },
                    locale: 'pl',
                    buttonText: {
                        today: 'Dzisiaj'
                    },
                    events: calendarEvents,
                    validRange: {
                        start: startRange,
                        end: endRange
                    },
                    eventClick: function(info) {
                        var dateObj = info.event.start;
                        var yyyy = dateObj.getFullYear();
                        var mm = String(dateObj.getMonth()+1).padStart(2, '0');
                        var dd = String(dateObj.getDate()).padStart(2, '0');
                        var dateKey = yyyy + "-" + mm + "-" + dd;
                        if (dayInfo[dateKey]) {
                            showModal(dayInfo[dateKey].Dostepni, dayInfo[dateKey].Niedostepni);
                        }
                    },
                });

                calendar.render();

                function showModal(dostepni, niedostepni) {
                    var modal = document.getElementById('modal');
                    modal.innerHTML = "<h3>Dostępni: " + dostepni.join(', ') + "</h3><h3>Niedostępni: " + niedostepni.join(', ') + "</h3>";
                    var overlay = document.getElementById('modalOverlay');
                    overlay.style.display = 'block';
                }
            });
        </script>
    }
</body>
</html>
