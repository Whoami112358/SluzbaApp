@model IEnumerable<WebApplication2.Models.Zwolnienie>

@{
    ViewData["Title"] = "Lista Zwolnień";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Twoja Aplikacja</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ecf0f1; /* Jasny tekst */
            box-sizing: border-box;
        }

        header {
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: white;
            padding: 10px 20px;
        }

        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
        }

            nav ul li {
                display: inline;
            }

                nav ul li a {
                    color: white;
                    text-decoration: none;
                    font-weight: bold;
                    transition: color 0.3s ease;
                }

                    nav ul li a:hover {
                        color: #1abc9c; /* Jasny zielony przy hover */
                    }

        h1 {
            color: #27ae60; /* Jasny zielony */
            text-align: center;
            font-family: 'Impact', sans-serif;
            text-shadow: 2px 2px #000;
            margin-top: 20px;
        }

        /* Tabela */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            table th, table td {
                padding: 10px;
                text-align: left;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #27ae60; /* Jasny zielony */
                color: white;
            }

            table td {
                background-color: #34495e; /* Ciemniejszy zielony */
                color: #ecf0f1;
            }

        /* Formularz */
        .form-container {
            background-color: #34495e; /* Ciemny zielony */
            padding: 20px;
            border-radius: 10px;
            border: 2px solid #3e5057;
            margin-top: 20px;
        }

            .form-container label {
                color: #27ae60; /* Jasny zielony dla etykiet */
                font-weight: bold;
            }

            .form-container select,
            .form-container input {
                background-color: #2c3e50; /* Ciemny odcień zieleni */
                color: #ecf0f1;
                padding: 10px;
                width: 100%;
                border: 1px solid #34495e;
                margin: 10px 0;
                border-radius: 5px;
            }

            .form-container button {
                background-color: #1abc9c; /* Jasny zielony */
                color: white;
                padding: 12px 20px;
                border: none;
                border-radius: 5px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .form-container button:hover {
                    background-color: #16a085; /* Ciemniejszy zielony przy hover */
                }

        /* Styl linków */
        a {
            color: #1abc9c; /* Jasny zielony */
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                color: #16a085; /* Ciemniejszy zielony przy hover */
            }
    </style>
</head>
<body>

    <header>
        <nav>
            <ul>
                <li><a href="/Dowodca/DowodcaView">Wróć do Strony głównej</a></li>
            </ul>
        </nav>
    </header>

    <h1>@ViewData["Title"]</h1>

    <!-- Tabela z listą zwolnień -->
    <table class="table">
        <thead>
            <tr>
                <th>Żołnierz</th>
                <th>Data Rozpoczęcia</th>
                <th>Data Zakończenia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var zwolnienie in Model)
            {
                <tr>
                    <td>@zwolnienie.Zolnierz.Imie @zwolnienie.Zolnierz.Nazwisko</td>
                    <td>@zwolnienie.DataRozpoczeciaZwolnienia.ToString("yyyy-MM-dd")</td>
                    <td>@zwolnienie.DataZakonczeniaZwolnienia.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <!-- Formularz do dodania nowego zwolnienia -->
    <div class="form-container">
        <h3>Dodaj Nowe Zwolnienie</h3>

        <form method="post" asp-action="DodajZwolnienie">
            @Html.AntiForgeryToken()

            <div>
                <label for="ID_Zolnierza">Żołnierz:</label>
                <select id="ID_Zolnierza" name="ID_Zolnierza" required>
                    @foreach (var zolnierz in ViewBag.Zolnierze)
                    {
                        <option value="@zolnierz.ID_Zolnierza">@zolnierz.Imie @zolnierz.Nazwisko</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="DataRozpoczeciaZwolnienia">Data Rozpoczęcia Zwolnienia</label>
                <input type="date" class="form-control" id="DataRozpoczeciaZwolnienia" name="DataRozpoczeciaZwolnienia" required />
            </div>

            <div class="form-group">
                <label for="DataZakonczeniaZwolnienia">Data Zakończenia Zwolnienia</label>
                <input type="date" class="form-control" id="DataZakonczeniaZwolnienia" name="DataZakonczeniaZwolnienia" required />
            </div>

            <button type="submit">Dodaj Zwolnienie</button>
        </form>
    </div>

</body>
</html>
