@model WebApplication2.Models.PrzydzielAutomatycznieViewModel
@{
    ViewData["Title"] = "Przydziel Automatycznie";
    // Jeśli w ViewBag przekazaliśmy listę harmonogramu, przypiszemy ją do zmiennej (opcjonalnie)
    var harmonogram = ViewBag.Harmonogram as List<WebApplication2.Models.Harmonogram>;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Twoja Aplikacja</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            box-sizing: border-box;
        }

        header {
            background-color: #2c3e50;
            color: white;
            padding: 10px 20px;
        }

        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
        }

            nav ul li {
                display: inline;
            }

                nav ul li a {
                    color: white;
                    text-decoration: none;
                    font-weight: bold;
                    transition: color 0.3s ease;
                }

                    nav ul li a:hover {
                        color: #1abc9c;
                    }

        .content {
            padding: 20px;
            margin: 30px auto;
            max-width: 900px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-weight: bold;
            font-size: 1.1em;
            color: #333;
        }

        input, select {
            padding: 10px;
            font-size: 1em;
            border: 2px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .buttons {
            display: flex;
            gap: 15px;
        }

        button {
            padding: 12px;
            font-size: 1.1em;
            background-color: #2c3e50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #1abc9c;
            }

        table {
            width: 100%;
            margin-top: 30px;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px 12px;
            border: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #34495e;
            color: white;
        }

        .validation-summary-errors {
            color: red;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/Dowodca/HarmonogramKC">Wróć do Harmonogramu</a></li>
                <li><a href="@Url.Action("PrzydzielAutomatycznie", "Dowodca")">Przydziel automatycznie</a></li>
            </ul>
        </nav>
    </header>
    <div class="content">
        <h1>@ViewData["Title"]</h1>

        @* Wyświetlanie błędów walidacji *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-summary-errors">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form method="post" asp-action="PrzydzielAutomatycznie">
            @Html.AntiForgeryToken()
            <div>
                <label for="WybraneKryterium">Kryterium przydziału:</label>
                <select id="WybraneKryterium" name="WybraneKryterium" required>
                    <option value="">-- Wybierz Kryterium --</option>
                    @* Iterujemy po ViewBag.Kryteria jako IEnumerable<SelectListItem> *@
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Kryteria)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div>
                <label for="Miesiac">Miesiąc (MM-yyyy):</label>
                <input type="text" id="Miesiac" name="Miesiac" placeholder="np. 01-2025" value="@Model.Miesiac" required />
            </div>
            <div>
                <label for="IdSluzby">Typ służby:</label>
                <select id="IdSluzby" name="IdSluzby" required>
                    <option value="">-- Wybierz Służbę --</option>
                    @* Iterujemy po ViewBag.Sluzby jako IEnumerable<SelectListItem> *@
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Sluzby)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="buttons">
                <!-- Przycisk wyświetlający harmonogram -->
                <button type="submit" name="submitAction" value="wyswietl">Wyświetl Harmonogram</button>
                <!-- Przycisk uruchamiający automatyczny przydział -->
                <button type="submit" name="submitAction" value="przydziel">Przydziel służby automatycznie</button>
            </div>
        </form>

        @* Jeśli w ViewBag przekazano listę harmonogramu, wyświetlamy ją poniżej *@
        @if (harmonogram != null)
        {
            <h2>Harmonogram dla miesiąca @Model.Miesiac oraz służby ID = @Model.IdSluzby</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID Harmonogramu</th>
                        <th>Data</th>
                        <th>Żołnierz</th>
                        <th>Służba</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in harmonogram)
                    {
                        <tr>
                            <td>@item.ID_Harmonogram</td>
                            <td>@item.Data.ToString("yyyy-MM-dd")</td>
                            <td>@(item.Zolnierz != null ? item.Zolnierz.Imie + " " + item.Zolnierz.Nazwisko : "Brak")</td>
                            <td>@(item.Sluzba != null ? item.Sluzba.Rodzaj : "Brak")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
