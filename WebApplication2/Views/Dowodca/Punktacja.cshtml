@{
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista Żołnierzy - Twoja Aplikacja</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../zolniez.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ecf0f1;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        header {
            text-align: center;
            padding: 20px 0;
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            font-size: 48px;
            margin: 25px 0;
            color: #ffffff;
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #ffffff;
            font-size: 14px;
            position: relative;
            margin-top: auto;
        }

            footer button {
                position: absolute;
                bottom: 10px;
                left: 10px;
                border: none;
                background: none;
                padding: 0;
                cursor: pointer;
            }

                footer button img {
                    width: 25px;
                    height: 24px;
                    display: block;
                }

        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: auto; /* Przesuwalność zawartości */
            padding: 20px;
        }

        table {
            width: 90%;
            max-width: 800px;
            border-collapse: collapse;
            margin: auto; /* Wyśrodkowanie tabeli */
            overflow: auto; /* Przesuwalność tabeli */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: rgba(172, 174, 165, 0.7);
            border-radius: 8px; /* Zaokrąglone rogi */
        }

            table th, table td {
                padding: 10px;
                text-align: center; /* Wyśrodkowanie zawartości */
                border: 1px solid #ddd;
            }

            table th {
                background-color: rgba(119, 131, 83, 1);
                color: white;
            }

            table td {
                background-color: rgba(172, 174, 165, 0.7);
            }

        form {
            display: flex;
            justify-content: center; /* Wypośrodkowanie elementów w kolumnie */
            align-items: center;
        }

            form input[type="number"] {
                padding: 5px;
                margin-right: 5px;
                width: 50px; /* Szerokość pola wejściowego */
                height: 40px;
                border: 1px solid #ccc;
                border-radius: 4px;
                background-color: lightgray;
                text-align: center; /* Wyśrodkowanie tekstu w polu */
            }

            form button {
                padding: 5px 10px;
                background: none;
                border: none;
                color: #333;
                cursor: pointer;
                transition: color 0.3s ease;
            }

                form button i {
                    font-size: 25px; /* Rozmiar ikony */
                    color: white;
                }

                form button:hover i {
                    color: rgba(172, 174, 165, 0.7); /* Kolor po najechaniu */
                }

        th a {
            display: inline-block;
            text-decoration: none;
            margin: 0 2px;
        }

        .fa-arrow-up, .fa-arrow-down {
            font-size: 14px;
            color: #000000;
            margin-left: 5px;
            cursor: pointer;
        }

            .fa-arrow-up:hover, .fa-arrow-down:hover {
                color: #000000;
            }
    </style>
</head>
<body>
    <header>
        <h1>LISTA ŻOŁNIERZY</h1>
    </header>
    <div class="content">
        <table>
            <thead>
                <tr>
                    <th>
                        Imię
                        <a href="@Url.Action("Punktacja", "Dowodca", new { sortBy = "Imie", isDescending = false })" style="margin-left: 5px;">
                            <i class="fa fa-arrow-up"></i>
                        </a>
                        <a href="@Url.Action("Punktacja", "Dowodca", new { sortBy = "Imie", isDescending = true })">
                            <i class="fa fa-arrow-down"></i>
                        </a>
                    </th>
                    <th>
                        Nazwisko
                        <a href="@Url.Action("Punktacja", "Dowodca", new { sortBy = "Nazwisko", isDescending = false })" style="margin-left: 5px;">
                            <i class="fa fa-arrow-up"></i>
                        </a>
                        <a href="@Url.Action("Punktacja", "Dowodca", new { sortBy = "Nazwisko", isDescending = true })">
                            <i class="fa fa-arrow-down"></i>
                        </a>
                    </th>
                    <th>Stopień</th>
                    <th>
                        Punkty
                        <a href="@Url.Action("Punktacja", "Dowodca", new { sortBy = "Punkty", isDescending = false })" style="margin-left: 5px;">
                            <i class="fa fa-arrow-up"></i>
                        </a>
                        <a href="@Url.Action("Punktacja", "Dowodca", new { sortBy = "Punkty", isDescending = true })">
                            <i class="fa fa-arrow-down"></i>
                        </a>
                    </th>
                    <th>Dodaj/Usuń Punkty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Imie</td>
                        <td>@item.Nazwisko</td>
                        <td>@item.Stopien</td>
                        <td>@item.Punkty</td>
                        <td>
                            <form method="post" action="/Dyzurny/ZaktualizujPunkty">
                                <input type="number" name="punkty" step="1" />
                                <button type="submit">
                                    <i class="fa fa-save text-white ms-2"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>



    </div>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
        <button onclick="location.href='@Url.Action("DowodcaView", "Dowodca")'">
            <img src="../back.png" alt="Powrót" />
        </button>
    </footer>
</body>
</html>
