@{
    Layout = "_Layout";
    ViewData["Title"] = "Sprawdź Powiadomienia";
    var sluzby = ViewBag.Sluzby as List<WebApplication2.Models.Sluzba>;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        .container {
            max-width: 500px;
            margin: 40px auto;
            background-color: #34495e;
            padding: 20px;
            border: 2px solid #27ae60;
            border-radius: 8px;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            color: #ecf0f1;
            font-weight: bold;
        }

        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid #16a085;
            border-radius: 4px;
            background-color: #2c3e50;
            color: #fff;
        }

        button {
            background-color: #1abc9c;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-weight: bold;
            cursor: pointer;
        }

            button:hover {
                background-color: #16a085;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <form method="post" asp-action="SprawdzPowiadomienia" asp-controller="Dowodca">
            @Html.AntiForgeryToken()

            <label for="ID_Sluzby">Wybierz służbę:</label>
            <select id="ID_Sluzby" name="ID_Sluzby">
                @if (sluzby != null)
                {
                    foreach (var s in sluzby)
                    {
                        <option value="@s.ID_Sluzby">@s.Rodzaj</option>
                    }
                }
            </select>

            <button type="submit">Sprawdź</button>
        </form>
    </div>
</body>
</html>
