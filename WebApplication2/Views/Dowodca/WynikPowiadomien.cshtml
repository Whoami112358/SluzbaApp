@model WebApplication2.Controllers.PowiadomieniaStatusViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Wynik Powiadomień";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        .container {
            max-width: 600px;
            margin: 40px auto;
            background-color: #34495e;
            padding: 20px;
            border: 2px solid #27ae60;
            border-radius: 8px;
            color: #ecf0f1;
        }

        .stats {
            margin-bottom: 15px;
        }

        .highlight {
            color: #1abc9c;
            font-weight: bold;
        }

        .error {
            color: red;
        }

        ul {
            list-style-type: disc;
            margin-left: 20px;
        }
    </style>
</head>
<body>
<div class="container">
    <h2>Powiadomienia dla służby: <span class="highlight">@Model.NazwaSluzby</span></h2>

    <div class="stats">
        <p>Liczba powiadomień: @Model.LiczbaPowiadomien</p>
        <p>Odebranych: @Model.LiczbaOdebranych</p>
        <p>Nieodebranych: @Model.LiczbaNieodebranych</p>
    </div>

        @if (Model.NieodebraniZolnierze != null && Model.NieodebraniZolnierze.Count > 0)
        {
            <p>Lista żołnierzy, którzy nie odebrali powiadomienia:</p>
            <ul>
                @foreach (var nied in Model.NieodebraniZolnierze)
                {
                    <li>@nied</li>
                }
            </ul>
        }
        else
        {
            <p>Wszyscy żołnierze odebrali powiadomienia.</p>
        }

    <p>
        <a asp-action="SprawdzPowiadomienia" asp-controller="Dowodca">Wybierz inną służbę</a>
    </p>
</div>
</body>
</html>
