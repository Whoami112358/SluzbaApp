@model WebApplication2.Models.Harmonogram

@{
    ViewData["Title"] = "Dodaj Harmonogram";
    <link href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel="stylesheet">
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Twoja Aplikacja</title>
    <style>
        body {
            font-family: Poppins;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            box-sizing: border-box;
        }

        header {
            background-color: #2c3e50;
            color: white;
            padding: 10px 20px;
        }

        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
        }

            nav ul li {
                display: inline;
            }

                nav ul li a {
                    color: white;
                    text-decoration: none;
                    font-weight: bold;
                    transition: color 0.3s ease;
                }

                    nav ul li a:hover {
                        color: #1abc9c;
                    }

        .content {
            padding: 20px;
            margin: 30px auto;
            max-width: 900px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            font-weight: bold;
            font-size: 1.1em;
            color: #333;
        }

        input, select {
            padding: 10px;
            font-size: 1em;
            border: 2px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        button {
            padding: 12px;
            font-size: 1.1em;
            background-color: #2c3e50; /* Ciemnoniebieski przycisk */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #1abc9c; /* Zielony przycisk przy hover */
            }

        a {
            display: inline-block;
            margin-bottom: 20px;
            font-size: 1em;
            color: #333;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #1abc9c;
            }
    </style>
</head>
<body>

    <header>
        <nav>
            <ul>
                <li><a href="/Dyzurny/HarmonogramKC">Wróć do Harmonogram</a></li>
            </ul>
        </nav>
    </header>

    <div class="content">
        <h1>@ViewData["Title"]</h1>

        <form method="post" asp-action="DodajHarmonogramKC">
            @Html.AntiForgeryToken()

            <div>
                <label for="Data">Data:</label>
                <input type="date" id="Data" name="Data" required />
            </div>

            <div>
                <label for="Miesiac">Miesiąc:</label>
                <input type="text" id="Miesiac" name="Miesiac" required />
            </div>

            <div>
                <label for="ID_Zolnierza">Żołnierz:</label>
                <select id="ID_Zolnierza" name="ID_Zolnierza" required>
                    @foreach (var zolnierz in ViewBag.Zolnierze)
                    {
                        <option value="@zolnierz.ID_Zolnierza">@zolnierz.Imie @zolnierz.Nazwisko</option>
                    }
                </select>
            </div>

            <div>
                <label for="ID_Sluzby">Służba:</label>
                <select id="ID_Sluzby" name="ID_Sluzby" required>
                    @foreach (var sluzba in ViewBag.Sluzby)
                    {
                        <option value="@sluzba.ID_Sluzby">@sluzba.Rodzaj</option>
                    }
                </select>
            </div>

            <button type="submit">Zapisz Harmonogram</button>
        </form>
    </div>

</body>
</html>
