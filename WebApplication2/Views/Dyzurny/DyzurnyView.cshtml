@{
    ViewData["Title"] = "PANEL OFICERA DYŻURNEGO";
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">

}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Twoja Aplikacja</title>
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../home.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ecf0f1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100vh;
        }

        header {
            text-align: center;
            padding: 20px 0;
            height: 20%;
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            font-size: 64px;
            text-align: center;
            margin-top: 50px;
            color: #ffffff;
        }

        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 30px;
            height: 80%;
            width: 100%;
            padding: 20px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        .card {
            background-color: rgba(119, 131, 83, 0.6);
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 1);
            text-align: center;
            height: 200px;
            width: 200px;
            padding: 30px;
            color: #ffffff;
            font-size: 24px;
            font-family: 'Poppins', Arial, sans-serif;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: scale(1.1); /* Slightly enlarges the card */
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.8); /* Enhances the shadow */
            background-color: rgba(139, 155, 95, 0.8); /* Lightens the background */
            color: #e2e2e2; /* Changes text color for contrast */
        }

        /* Optional Focus Effect for Accessibility */
        .card:focus {
            outline: none;
            box-shadow: 0 0 10px 2px rgba(255, 255, 255, 0.8); /* Highlight card on focus */
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #ffffff;
            font-size: 14px;
        }

        footer p {
            margin: 0;
        }

        .hover-image {
            transition: filter 0.3s ease, transform 0.3s ease;
            width: 49px;
            height: 49px;
        }

        /* Change color on hover using hue-rotate */
        .hover-image:hover {
            filter: hue-rotate(90deg) brightness(0.7); /* Adjust to desired color and brightness */
            transform: scale(1.1); /* Optional scaling effect */
        }
    </style>
</head>
<body>

    <header>
        <h1>@ViewData["Title"]</h1>
    </header>
    <div id="logout">
    <button onclick="location.href='/Account/Logout'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; top: 25px; right: 50px;">
        <img src="../Wyloguj.png" class="hover-image" alt="Wyloguj" />
    </button>
    </div>

    <div class="content">
        <div class="card">
            <button onclick="location.href='@Url.Action("Index", "DyzurnyCalendar")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../kalendarz.png" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 25px;">Kalendarz</span>
            </button>
        </div>
        <div class="card">
            <button onclick="location.href='@Url.Action("Punktacja", "Dyzurny")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../punktacja.png" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 25px;">Punktacja</span>
            </button>
        </div>
        <div class="card">
            <button onclick="location.href='@Url.Action("HarmonogramKC", "Dyzurny")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../harmonogram.png" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 25px;">Harmonogram</span>
            </button>
        </div>

        <div class="card">
            <button onclick="location.href='@Url.Action("ListaTygodniowa", "Dyzurny")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../lista.png" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 10px;">Służby w przyszłym tygodniu</span>
            </button>
        </div>
        <div class="card">
            <button onclick="location.href='@Url.Action("ListaPowiadomien", "Dyzurny")'"
                    style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../powiadomienia.png" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 25px;">Sprawdz Powiadomienia</span>
            </button>
        </div>

    </div>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
    </footer>
    
</body>
</html>
