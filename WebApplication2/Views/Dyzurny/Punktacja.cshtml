@{
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">

}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista Żołnierzy - Twoja Aplikacja</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../zolniez.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ecf0f1;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        header {
            text-align: center;
            padding: 20px 0;
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            font-size: 48px;
            margin: 25px 0;
            color: #ffffff;
        }


        footer {
            text-align: center;
            padding: 10px;
            color: #ffffff;
            font-size: 14px;
            position: relative;
            margin-top: auto;
        }

            footer button {
                position: absolute;
                bottom: 10px;
                left: 10px;
                border: none;
                background: none;
                padding: 0;
                cursor: pointer;
            }

                footer button img {
                    width: 25px;
                    height: 24px;
                    display: block;
                }

        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: auto; /* Przesuwalność zawartości */
            padding: 20px;
        }

        table {
            width: 90%;
            max-width: 800px;
            border-collapse: collapse;
            margin: auto; /* Wyśrodkowanie tabeli */
            overflow: auto; /* Przesuwalność tabeli */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: rgba(172, 174, 165, 0.7);
            border-radius: 8px; /* Zaokrąglone rogi */
        }

            table th, table td {
                padding: 10px;
                text-align: left;
                border: 1px solid #ddd;
            }

            table th {
                background-color: rgba(119, 131, 83, 1);
                color: white;
            }

            table td {
                background-color: rgba(172, 174, 165, 0.7);
            }

        form {
            display: flex;
            align-items: center;
        }

            form input[type="number"] {
                padding: 5px;
                margin-right: 10px;
                width: 50px; /* Większe pole wejściowe */
            }

            form button {
                padding: 5px 10px;
                background-color: rgba(119, 131, 83, 1);
                border: none;
                color: white;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                form button:hover {
                    background-color: rgba(0, 0, 0, 0.2);
                }
    </style>
</head>
<body>
    <header>
        <h1>LISTA ŻOŁNIERZY</h1>
    </header>
    <div class="content">
        <table>
            <thead>
                <tr>
                    <!--<th>ID Żołnierza</th>-->
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Stopień</th>
                    <th>Punkty</th>
                    <th>Dodaj/Usuń Punkty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!--<td>@item.ID_Zolnierza</td>-->
                        <td>@item.Imie</td>
                        <td>@item.Nazwisko</td>
                        <td>@item.Stopien</td>
                        <td>@item.Punkty</td>
                        <td>
                            <form method="post" action="/Dyzurny/ZaktualizujPunkty">
                                <input type="hidden" name="ID_Zolnierza" value="@item.ID_Zolnierza" />
                                <input type="number" name="punkty" step="1" />
                                <button type="submit">Dodaj/Usuń Punkty</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
        <button onclick="location.href='@Url.Action("DyzurnyView", "Dyzurny")'">
            <img src="../back.png" alt="Powrót" />
        </button>
    </footer>
</body>
</html>
