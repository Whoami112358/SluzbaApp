@model IEnumerable<WebApplication2.Models.Harmonogram>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Strona Główna - Niezalogowany";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logowanie</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #2c3e50; /* ciemny odcień zieleni */
            color: #ecf0f1; /* jasny szary tekst */
            box-sizing: border-box;
        }

        h1 {
            text-align: center;
            margin-top: 40px;
            color: #27ae60; /* ciemny odcień zieleni */
            font-size: 2.5em;
        }

        p {
            text-align: center;
            font-size: 1.2em;
            color: #7f8c8d; /* odcień brązowy */
            margin-bottom: 20px;
        }

        /* Style dla formularza */
        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 40px 30px;
            background-color: #34495e; /* odcień ciemnej zieleni */
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        label {
            font-weight: bold;
            font-size: 1.1em;
            color: #27ae60; /* ciemna zieleń */
        }

        input {
            padding: 12px;
            font-size: 1em;
            border: 1px solid #2c3e50; /* ciemny brązowy */
            border-radius: 5px;
            background-color: #2c3e50; /* ciemny odcień zieleni */
            width: 100%;
            margin: 0;
            color: #ecf0f1; /* jasny tekst w polu */
        }

        button {
            padding: 12px;
            font-size: 1.2em;
            background-color: #1abc9c; /* jasny zielony */
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
        }

            button:hover {
                background-color: #16a085; /* ciemniejszy odcień zieleni */
            }

        .error-message {
            color: #e74c3c; /* czerwona */
            font-size: 1.1em;
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
            border: 2px solid #e74c3c;
            padding: 10px;
            border-radius: 5px;
            background-color: rgba(231, 76, 60, 0.1);
            width: 100%;
        }

        .button-header {
            background-color: #1abc9c; /* jasny zielony */
            padding: 12px;
            color: #fff;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-transform: uppercase;
            letter-spacing: 1px;
            width: 100%;
        }

            .button-header:hover {
                background-color: #16a085; /* ciemniejszy zielony */
            }
    </style>
</head>
<body>
    <h1>Witamy w naszej aplikacji!</h1>
    <p>Aplikacja służy do monitorowania systemu służb - harmonogramu i punktów</p>

    @if (ViewBag.Error != null)
    {
        <div class="error-message">
            <p>@ViewBag.Error</p>
        </div>
    }

    <!-- Formularz logowania -->
    <div class="container">
        <form action="/Account/Login" method="post">
            @Html.AntiForgeryToken()

            <div>
                <label for="login">Login:</label>
                <input type="text" id="login" name="login" required />
            </div>

            <div>
                <label for="haslo">Hasło:</label>
                <input type="password" id="haslo" name="haslo" required />
            </div>

            <button type="submit">Zaloguj się</button>
        </form>
    </div>
</body>
</html>
