@model IEnumerable<WebApplication2.Models.Harmonogram>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Strona Główna - Niezalogowany";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 90%;
            margin: 30px auto;
            background: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 8px;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
        }

        p {
            color: #7f8c8d;
            text-align: center;
            margin-bottom: 20px;
        }

        .error {
            color: #e74c3c;
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: stretch;
        }

        label {
            font-weight: bold;
            color: #34495e;
            margin-bottom: 5px;
        }

        input[type="number"],
        input[type="password"] {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #dcdfe6;
            border-radius: 5px;
            width: 100%;
            box-sizing: border-box;
        }

        button {
            background-color: #3498db;
            color: #ffffff;
            font-size: 16px;
            font-weight: bold;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
        }

            button:hover {
                background-color: #2980b9;
            }

        footer {
            margin-top: 20px;
            text-align: center;
            color: #95a5a6;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Witamy w naszej aplikacji!</h1>
        <p>Aplikacja służy do monitorowania systemu służb - harmonogramu i punktów</p>

        @if (ViewBag.Error != null)
        {
            <p class="error">@ViewBag.Error</p>
        }

        <!-- Formularz logowania -->
        <form action="/Account/Login" method="post">
            @Html.AntiForgeryToken()
            <div>
                <label for="Id">ID Żołnierza:</label>
                <input type="number" id="Id" name="Id" required placeholder="Wprowadź ID żołnierza">
            </div>

            <div>
                <label for="Pesel">PESEL:</label>
                <input type="password" id="Pesel" name="Pesel" required placeholder="Wprowadź PESEL">
            </div>
            <button type="submit">Zaloguj się</button>
        </form>
        <footer>
            &copy; 2024 Twoja Aplikacja
        </footer>
    </div>
</body>
</html>
