@model IEnumerable<WebApplication2.Models.Harmonogram>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Strona Główna - Niezalogowany";
}

<h1>Witamy w naszej aplikacji!</h1>
<p>Tutaj znajdziesz informacje o aplikacji.</p>

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}

<!-- Formularz logowania -->
<form action="/Account/Login" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label for="Id">ID Żołnierza:</label>
        <input type="number" id="Id" name="Id" required />
    </div>

    <div>
        <label for="Pesel">PESEL:</label>
        <input type="password" id="Pesel" name="Pesel" required />
    </div>
    <button type="submit">Zaloguj się</button>
</form>

