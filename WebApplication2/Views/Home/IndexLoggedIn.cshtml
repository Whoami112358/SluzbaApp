@{
    ViewData["Title"] = "PANEL ŻOŁNIERZA";
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">
    <link href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel="stylesheet">
}


<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Strona Główna - Zalogowany - Twoja Aplikacja</title>
    <style>
        body {
            font-family: Poppins;
            margin: 0;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../zolniez.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ecf0f1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100vh;
        }

        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 30px;
            height: 90%;
            width: 100%;
            padding: 20px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        .card {
            background-color: rgba(119, 131, 83, 0.6);
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 1);
            text-align: center;
            height: 200px;
            width: 200px;
            padding: 30px;
            color: #ffffff;
            font-size: 24px;
            font-family: Poppins;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: scale(1.1); /* Slightly enlarges the card */
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.8); /* Enhances the shadow */
                background-color: rgba(139, 155, 95, 0.8); /* Lightens the background */
                color: #e2e2e2; /* Changes text color for contrast */
            }

            /* Optional Focus Effect for Accessibility */
            .card:focus {
                outline: none;
                box-shadow: 0 0 10px 2px rgba(255, 255, 255, 0.8); /* Highlight card on focus */
            }

        footer {
            text-align: center;
            color: #ffffff;
            font-size: 14px;
        }

        footer p {
            margin: 0;
        }

        .hover-image {
            transition: filter 0.3s ease, transform 0.3s ease;
            width: 49px;
            height: 49px;
        }

        /* Change color on hover using hue-rotate */
        .hover-image:hover {
            filter: hue-rotate(90deg) brightness(0.7); /* Adjust to desired color and brightness */
            transform: scale(1.1); /* Optional scaling effect */
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            font-size: 64px;
            text-align: center;
            margin-top: 50px;
            color: #ffffff;
        }
    </style>

</head>
<body>
    <div id="logout">
        <button onclick="location.href='/Account/Logout'"
                style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; top: 25px; right: 50px;">
            <img src="../Wyloguj.png" class="hover-image" alt="Wyloguj" />
        </button>
    </div>
    
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>
    <!--
        
    <button onclick="location.href='@Url.Action("Index", "Profile")'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; top: 10px; right: 110px;">
        <img src="../avatar.png" style="width: 28px; height: 32px;" alt="Profil" />
    </button>
    <button onclick="location.href='@Url.Action("Index", "Powiadomienia")'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; top: 10px; right: 60px;">
        <img src="../powiadomienia.png" style="width:28px; height: 32px;" alt="Powiadomienia" />
    </button>-->

    <div class="content">
        <div class="card">
            <button onclick="location.href='@Url.Action("Index", "Schedule")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../harmonogram.png" alt="Harmonogram" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 25px;">Harmonogram</span>
            </button>
        </div>
        <div class="card">
            <button onclick="location.href='@Url.Action("Index", "Calendar")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../kalendarz.png" alt="Kalendarz" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 25px;">Kalendarz</span>
            </button>
        </div>
        <div class="card">
            <button onclick="location.href='@Url.Action("Index", "Profile")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../avatar1.png" alt="Mój Profil" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 25px;">Mój Profil</span>
            </button>
        </div>
        <div class="card">
            <button onclick="location.href='@Url.Action("Index", "Powiadomienia")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../powiadomienia.png" alt="Powiadomienia" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 25px;">Powiadomienia</span>
            </button>
        </div>
    </div>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
    </footer>
</body>
</html>
