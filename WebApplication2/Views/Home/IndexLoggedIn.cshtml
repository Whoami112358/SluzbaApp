@{
    ViewData["Title"] = "Strona główna";
}


<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Strona Główna - Zalogowany - Twoja Aplikacja</title>
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../zolniez.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ecf0f1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100vh;
        }

        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 30px;
            height: 90%;
            width: 100%;
            padding: 20px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        .card {
            background-color: rgba(119, 131, 83, 0.7);
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 1);
            text-align: center;
            height: 250px;
            width: 250px;
            padding: 30px;
            color: #ffffff;
            font-size: 24px;
            font-family: 'Poppins', Arial, sans-serif;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        footer {
            text-align: center;
            color: #ffffff;
            font-size: 14px;
        }

            footer p {
                margin: 0;
            }
    </style>

</head>
<body>
    <button onclick="location.href='@Url.Action("Index", "Home")'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; top: 10px; right: 10px;">
        <img src="../Wyloguj.png" style="width: 28px; height: 32px;" alt="Wyloguj" />
    </button>
    <button onclick="location.href='@Url.Action("Index", "Profile")'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; top: 10px; right: 110px;">
        <img src="../avatar.png" style="width: 28px; height: 32px;" alt="Wyloguj" />
    </button>
    <button onclick="location.href='@Url.Action("Index", "Powiadomienia")'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; top: 10px; right: 60px;">
        <img src="../powiadomienia.png" style="width:28px; height: 32px;" alt="Wyloguj" />
    </button>

    <div class="content">
        <div class="card">
            <button onclick="location.href='@Url.Action("Index", "Schedule")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../harmonogram.png" alt="Harmonogram" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 10px;">Kalendarz służb żołnierzy</span>
            </button>
        </div>
        <div class="card">
            <button onclick="location.href='@Url.Action("Index", "Calendar")'" style="border: none; background: none; padding: 0; cursor: pointer;">
                <img src="../kalendarz.png" alt="Kalendarz" style="width: 108px; height: 124px;" />
                <span style="display: block; color: #ffffff; font-size: 24px; margin-top: 10px;">Kalendarz służb żołnierzy</span>
            </button>
        </div>
    </div>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
    </footer>
</body>
</html>
