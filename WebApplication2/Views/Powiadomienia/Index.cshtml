@model IEnumerable<WebApplication2.Models.Powiadomienie>

@{
    ViewData["Title"] = "POWIADOMIENIA";
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">

}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;

            margin-left: auto;
            margin-right: auto;

            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../kalendarzbg.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            width: 100vh;
            color: #ecf0f1;
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            text-align: center;
            font-size: 48px;
            color: #ffffff;
            margin-top: 20px;
            margin-bottom: 40px;
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #ffffff;
            font-size: 14px;
            margin-top: 55%;
        }

        .content {
            flex: 1;
            overflow: auto;
            margin: 0 auto;
            padding: 20px;
            box-sizing: border-box;
        }


        table {
            margin-right: 50px;
            margin-left: 50px;
            width: 100%;
            border-collapse: collapse;
        }

            table th, table td {
                padding: 10px;
                text-align: center;
                border: 1px solid #ddd;
            }

            table th {
                top: 0;
                background-color: rgba(119, 131, 83, 1);
                color: white;
            }

            table td {
                background-color: rgba(172, 174, 165, 0.7);
            }

        .status-odebrane {
            color: #2ecc71;
            font-weight: bold;
        }

        .status-wyslano {
            color: #e74c3c;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        @if (Model == null || !Model.Any())
        {
            <p>Brak powiadomień do wyświetlenia.</p>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>Treść</th>
                        <th>Typ</th>
                        <th>Wysłano</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.TrescPowiadomienia</td>
                            <td>@p.TypPowiadomienia</td>
                            <td>
                                @p.DataIGodzinaWyslania?.ToString("yyyy-MM-dd HH:mm")
                            </td>
                            <td>
                                @if (p.Status == "Odebrane")
                                {
                                    <span class="status-odebrane">Odebrane</span>
                                }
                                else
                                {
                                    <span class="status-wyslano">@(p.Status ?? "Wysłano")</span>
                                }
                            </td>
                            <td>
                                @if (p.Status != "Odebrane")
                                {
                                    <!-- ZAMIENIAMY tag helper na bezpośrednie href -->
                                    <a href="/Powiadomienia/Odbierz?idPowiadomienia=@p.ID_Powiadomienia"
                                       class="button-link"
                                       style="color: #2ecc71;">
                                        Potwierdź
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <button onclick="location.href='@Url.Action("Index", "Home")'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; bottom: 35px; left: 10px;">
        <img src="../back.png" style="width: 25px; height: 24px;" />
    </button>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
    </footer>
</body>
</html>
