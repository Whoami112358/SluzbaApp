@model WebApplication2.Models.Zolnierz
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edytuj Profil";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edytuj Profil - Twoja Aplikacja</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        /* Ogólne style dla strony */
        body {
            font-family: 'Courier New', Courier, monospace;
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ffffff; /* Biały tekst */
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            padding: 15px;
            text-align: center;
            border-bottom: 2px solid #ffffff;
        }

            header nav ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                header nav ul li {
                    display: inline;
                    margin-right: 20px;
                }

                    header nav ul li a {
                        color: #ffffff;
                        text-decoration: none;
                        font-size: 1.2em;
                    }

                        header nav ul li a:hover {
                            color: #1abc9c; /* Jasny zielony przy hover */
                        }

        .content {
            margin: 30px auto;
            padding: 20px;
            width: 600px;
            background-color: #34495e; /* Ciemny odcień zieleni */
            border: 2px solid #27ae60; /* Jasny zielony */
            border-radius: 8px;
            text-align: center;
        }

            .content h1 {
                color: #27ae60; /* Jasny zielony */
                font-size: 2.5em;
            }

            .content form {
                display: flex;
                flex-direction: column;
                gap: 15px;
                margin-top: 20px;
            }

            .content label {
                font-size: 1.1em;
                color: #27ae60; /* Ciemniejszy odcień zieleni */
                font-weight: bold;
            }

            .content input {
                padding: 10px;
                font-size: 1.1em;
                border: 2px solid #27ae60; /* Zielona ramka */
                border-radius: 5px;
                background-color: #2c3e50; /* Ciemny odcień zieleni */
                color: #ffffff;
            }

                .content input[type="number"] {
                    width: 100%;
                }

            .content button {
                padding: 12px;
                font-size: 1.1em;
                background-color: #1abc9c; /* Jasny zielony */
                color: #ffffff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .content button:hover {
                    background-color: #16a085; /* Ciemniejszy zielony przy hover */
                }

        footer {
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ffffff;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }

        /* Styl dla wiadomości o błędach */
        .error-message {
            background-color: rgba(231, 76, 60, 0.1); /* Jasno-czerwony z delikatną przezroczystością */
            color: #e74c3c; /* Czerwony tekst */
            padding: 10px;
            border: 1px solid #e74c3c;
            border-radius: 5px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1>Edytuj Mój Profil</h1>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form method="post" asp-action="Edit">
            @Html.AntiForgeryToken()

            <!-- Ukryte pola dla wymaganych właściwości -->
            <input type="hidden" name="ID_Zolnierza" value="@Model.ID_Zolnierza" />
            <input type="hidden" name="Imie" value="@Model.Imie" />
            <input type="hidden" name="Nazwisko" value="@Model.Nazwisko" />
            <input type="hidden" name="Pesel" value="@Model.Pesel" />
            <input type="hidden" name="ImieOjca" value="@Model.ImieOjca" />
            <input type="hidden" name="Pododdzial" value="@Model.Pododdzial?.ID_Pododdzialu" />
            <input type="hidden" name="LoginData" value="@Model.LoginData?.LoginName" />
            <input type="hidden" name="Urlopy" value="@Model.Urlopy?.Count()" />
            <input type="hidden" name="Zwolnienia" value="@Model.Zwolnienia?.Count()" />
            <input type="hidden" name="Harmonogramy" value="@Model.Harmonogramy?.Count()" />
            <input type="hidden" name="Przewinienia" value="@Model.Przewinienia?.Count()" />
            <input type="hidden" name="Powiadomienia" value="@Model.Powiadomienia?.Count()" />
            <input type="hidden" name="Priorytety" value="@Model.Priorytety?.Count()" />

            <!-- Edytowane pola -->
            <div>
                <label for="Stopien">Stopień:</label>
                <input type="text" id="Stopien" name="Stopien" value="@Model.Stopien" required />
            </div>

            <div>
                <label for="Wiek">Wiek:</label>
                <input type="number" id="Wiek" name="Wiek" value="@Model.Wiek" required min="18" max="100" />
            </div>

            <div>
                <label for="Adres">Adres:</label>
                <input type="text" id="Adres" name="Adres" value="@Model.Adres" required />
            </div>

            <div style="display: flex; justify-content: space-between;">
                <button type="submit">Zapisz zmiany</button>
                <button type="button" onclick="window.location.href='@Url.Action("Index", "Profile")'">Anuluj</button>
            </div>
        </form>
    </div>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
