@{
    ViewData["Title"] = "MÓJ PROFIL";
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">

}


<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mój Profil - Twoja Aplikacja</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../profil.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ecf0f1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100vh;
        }

        header {
            text-align: center;
            padding: 20px 0;
            height: 10%;
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            font-size: 48px;
            text-align: center;
            margin-top: 25px;
            margin-bottom: 25px;
            color: #ffffff;
        }

        footer {
            text-align: center;
            padding: 10px;
            color: #ffffff;
            font-size: 14px;
        }
        button{
            background-color: rgba(172, 174, 165, 0.7);
            color: white; /* Kolor tekstu */
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

        .content {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            height: 90%;
            width: 100%;
            overflow: auto;
            margin: 0 auto;
            box-sizing: border-box;
        }

        .table-container {
            background-color: rgba(119, 131, 83, 1);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            width: 300px;
        }

            .table-container h1 {
                text-align: center;
                font-size: 24px;
                color: #ffffff; /* Kolor tekstu */
                margin-bottom: 20px;
            }

        .table-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

            .table-row label {
                font-size: 16px;
                color: #ffffff; /* Kolor tekstu etykiety */
                flex: 1;
            }

            .table-row input {
                flex: 2;
                padding: 8px;
                border: none;
                border-radius: 5px;
                background-color: rgba(172, 174, 165, 0.7);
                color: #ffffff; /* Kolor tekstu */
                font-size: 14px;
                box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2);
            }

                .table-row input:focus {
                    outline: none;
                    background-color: #9ba874; /* Kolor po kliknięciu */
                }
        /* Styl dla wiadomości o błędach */
        .error-message {
            background-color: rgba(231, 76, 60, 0.1); /* Jasno-czerwony z delikatną przezroczystością */
            color: #e74c3c; /* Czerwony tekst */
            padding: 10px;
            border: 1px solid #e74c3c;
            border-radius: 5px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="content">
    <div class="table-container">
         <div class="table-row">
            <label for="Imie">Imię:</label>
            <input type="text" id="Imie" value="@ViewBag.Imie" />
        </div>
        <div class="table-row">
            <label for="Nazwisko">Nazwisko:</label>
            <input type="text" id="Nazwisko" value="@ViewBag.Nazwisko" />
        </div>
        <div class="table-row">
            <label for="Stopien">Stopień:</label>
            <input type="text" id="Stopien" value="@ViewBag.Stopien" />
        </div>
        <div class="table-row">
            <label for="Wiek">Wiek:</label>
            <input type="text" id="Wiek" value="@ViewBag.Wiek" />
        </div>
        <div class="table-row">
            <label for="Adres">Adres:</label>
            <input type="text" id="Adres" value="@ViewBag.Adres" />
        </div>
        <div class="table-row">
            <label for="ImieOjca">Imię Ojca:</label>
            <input type="text" id="ImieOjca" value="@ViewBag.ImieOjca" />
        </div>
        <div class="table-row">
            <label for="Punkty">Punkty:</label>
            <input type="text" id="Punkty" value="@ViewBag.Punkty" />
        </div>
            <button onclick="window.location.href='/Profile/Edit'" style="margin-left: auto;margin-right: auto; display: block;">Edytuj Profil</button>
    </div>
    </div>
    <button onclick="location.href='@Url.Action("Index", "Home")'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; bottom: 35px; left: 10px;">
        <img src="../back.png" style="width: 25px; height: 24px;" />
    </button>

    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
    </footer>

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</body>
</html>
