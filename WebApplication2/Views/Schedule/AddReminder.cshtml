@model WebApplication2.Controllers.AddReminderViewModel

@{
    ViewData["Title"] = "DODAJ PRZYPOMNIENIE";
    <link rel="stylesheet" href="https://db.onlinewebfonts.com/c/7aa6f23718712abc71a57b079ebadb52?family=Korolev+Military+Stencil+W00+Rg">
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Aplikacja</title>
    <style>
        body {
            font-family: 'Poppins', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: linear-gradient(45deg, rgba(3, 34, 40, 0.6) 0%, rgba(15, 24, 16, 0.6) 100%), url('../harmonogrambg.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ecf0f1;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
        }

        header {
            text-align: center;
            padding: 20px 0;
        }

        h1 {
            font-family: 'Korolev Military Stencil W00 Rg';
            font-size: 48px;
            text-align: center;
            margin: 25px 0;
            color: #ffffff;
        }

        .container {
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Elementy rozłożone równomiernie */
            height: auto;
            max-width: 600px;
            background-color: rgba(119, 131, 83, 1);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.3); /* Dodatkowy efekt */
        }

        label {
            color: #ecf0f1;
            font-weight: bold;
            display: block;
            margin: 10px 0 5px 0;
        }

        input[type="text"], input[type="date"], input[type="time"], input[type="number"], textarea {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 15px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background-color: rgba(172, 174, 165, 1);
            color: #fff;
            font-size: 14px;
        }

        button {
            padding: 10px 20px;
            background-color: rgba(172, 174, 165, 1);
            border: none;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            text-align: center;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: rgba(0, 0, 0, 0.2);
            }

        footer {
            text-align: center;
            padding: 10px;
            color: #ffffff;
            font-size: 14px;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="container">
        @using (Html.BeginForm("AddReminder", "Schedule", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ID_Harmonogram)

            <label for="DataSluzby">Data służby:</label>
            @Html.TextBoxFor(m => m.DataSluzby, new { type = "date" })

            <label for="GodzinaSluzby">Godzina służby:</label>
            @Html.TextBoxFor(m => m.GodzinaSluzby, new { type = "time" })

            <label for="Tytul">Tytuł przypomnienia:</label>
            @Html.TextBoxFor(m => m.Tytul, new { type = "text" })

            <label for="Notatki">Notatki:</label>
            @Html.TextAreaFor(m => m.Notatki, 3, 40, new { })

            <div style="margin-top: auto;">
                <label for="OffsetMinutes">Przypomnienie przed (minuty):</label>
                @Html.TextBoxFor(m => m.OffsetMinutes, new { type = "number" })

                <button type="submit" onclick="this.innerHTML='Utworzono'" style="margin-top: 15px;">Utwórz przypomnienie</button>
            </div>
        }
    </div>
    <button onclick="location.href='@Url.Action("Index", "Schedule")'"
            style="border: none; background: none; padding: 0; cursor: pointer; position: absolute; bottom: 35px; left: 10px;">
        <img src="../back.png" style="width: 25px; height: 24px;" />
    </button>
    <footer>
        <p>&copy; 2024 Twoja Aplikacja. Wszystkie prawa zastrzeżone.</p>
    </footer>
</body>
</html>
