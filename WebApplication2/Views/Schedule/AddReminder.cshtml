@model WebApplication2.Controllers.AddReminderViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dodaj Przypomnienie";
}


<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Aplikacja</title>
    <style>
        .container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #34495e;
            padding: 20px;
            border: 2px solid #27ae60;
            border-radius: 8px;
        }

        label {
            color: #ecf0f1;
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }

        input[type="text"], input[type="date"], input[type="time"], textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #16a085;
            border-radius: 4px;
            margin-bottom: 10px;
            background-color: #2c3e50;
            color: #fff;
        }

        button {
            padding: 10px 20px;
            background-color: #1abc9c;
            border: none;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #16a085;
            }

        .error-message {
            color: #e74c3c;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        @using (Html.BeginForm("AddReminder", "Schedule", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.ID_Harmonogram)

            <label for="DataSluzby">Data służby:</label>
            @Html.TextBoxFor(m => m.DataSluzby, new { type = "date" })

            <label for="GodzinaSluzby">Godzina służby:</label>
            @Html.TextBoxFor(m => m.GodzinaSluzby, new { type = "time" })

            <label for="Tytul">Tytuł przypomnienia:</label>
            @Html.TextBoxFor(m => m.Tytul, new { type = "text" })

            <label for="Notatki">Notatki:</label>
            @Html.TextAreaFor(m => m.Notatki, 3, 40, new { })

            <label for="OffsetMinutes">Przypomnienie przed (minuty):</label>
            @Html.TextBoxFor(m => m.OffsetMinutes, new { type = "number" })

            <button type="submit">Utwórz przypomnienie</button>
        }
    </div>
</body>
</html>
