<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        .container {
            max-width: 800px;
            margin: 40px auto;
            background-color: #34495e;
            padding: 20px;
            border: 2px solid #27ae60;
            border-radius: 8px;
            color: #ecf0f1;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #27ae60;
        }

        th {
            background-color: #27ae60;
            color: #fff;
        }

        tr:hover {
            background-color: #616f39;
        }

        .btn {
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
        }

        .btn-warning {
            background-color: #e67e22;
            color: #ecf0f1;
        }

            .btn-warning:hover {
                background-color: #d35400;
            }

        .btn-primary {
            background-color: #27ae60;
            color: #ecf0f1;
        }

            .btn-primary:hover {
                background-color: #1e8449;
            }

        /* Modal styl */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            overflow: auto;
            padding-top: 60px;
        }

        .modal-content {
            background-color: #34495e;
            margin: 5% auto;
            padding: 20px;
            border: 2px solid #27ae60;
            border-radius: 8px;
            width: 50%;
            color: #ecf0f1;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

            .modal-content h2 {
                color: #27ae60;
            }

            .modal-content label {
                display: block;
                margin-top: 10px;
                font-weight: bold;
            }

            .modal-content textarea,
            .modal-content input {
                width: 100%;
                padding: 8px;
                margin-top: 5px;
                margin-bottom: 15px;
                border: 1px solid #27ae60;
                border-radius: 4px;
                background-color: #ecf0f1;
                color: #2c3e50;
            }

        .close {
            color: #ecf0f1;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: #d35400;
                text-decoration: none;
                cursor: pointer;
            }

        .message-box {
            text-align: center;
            margin-top: 20px;
            font-size: 18px;
            color: #2ecc71;
            font-weight: bold;
        }

        .return-button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #27ae60;
            color: #ecf0f1;
            text-decoration: none;
            border-radius: 5px;
        }

            .return-button:hover {
                background-color: #1e8449;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 style="color: #27ae60;">Twój Harmonogram Służb</h2>

        <table>
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Służba</th>
                    <th>Przypomnienie</th>
                    <th>Wniosek o zmianę terminu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Data.ToShortDateString()</td>
                        <td>@(item.Sluzba != null ? item.Sluzba.Rodzaj : "Brak")</td>
                        <td>
                            <a href="@Url.Action("AddReminder", "Schedule", new { idHarmonogram = item.ID_Harmonogram })"
                               class="btn btn-primary">
                                Dodaj przypomnienie
                            </a>
                        </td>
                        <td>
                            <button class="btn btn-warning" onclick="openModal(@item.ID_Harmonogram)">Złóż wniosek o zmianę terminu</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal do składania wniosku -->
    <div id="changeRequestModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Wniosek o zmianę terminu służby</h2>
            <form id="changeRequestForm" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="harmonogramId" name="ID_Harmonogramu" />
                <label for="uzasadnienie">Uzasadnienie wniosku:</label>
                <textarea id="uzasadnienie" name="Uzasadnienie" required></textarea>

                <label for="proponowanaData">Proponowana data:</label>
                <input type="date" id="proponowanaData" name="ProponowanaData" required />

                <button type="submit" class="btn btn-primary">Wyślij wniosek</button>
            </form>
            <div id="messageBox" class="message-box" style="display: none;">
                Twój wniosek został wysłany!
                <br />
                <a href="@Url.Action("Index", "Schedule")" class="return-button">Powrót do harmonogramu</a>
            </div>
        </div>
    </div>

    <script>
        function openModal(id) {
            document.getElementById("harmonogramId").value = id;
            document.getElementById("changeRequestModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("changeRequestModal").style.display = "none";
            document.getElementById("messageBox").style.display = "none";
            document.getElementById("changeRequestForm").style.display = "block";
        }

        document.getElementById("changeRequestForm").onsubmit = function (event) {
            event.preventDefault();
            var formData = new FormData(this);

            fetch('@Url.Action("ZlozWniosekZmianyTerminu", "Schedule")', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (response.ok) {
                    document.getElementById("messageBox").style.display = "block";
                    document.getElementById("changeRequestForm").style.display = "none";
                } else {
                    alert('Wystąpił błąd przy wysyłaniu wniosku.');
                }
            })
            .catch(error => {
                alert('Wystąpił błąd.');
                console.error(error);
            });
        };
    </script>
</body>
</html>
