@model IEnumerable<WebApplication2.Models.Harmonogram>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Harmonogram Służb";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        /* Ogólne style dla strony */
        body {
            font-family: 'Courier New', Courier, monospace;
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ffffff; /* Biały tekst */
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            padding: 15px;
            text-align: center;
            border-bottom: 2px solid #ffffff;
        }

            header nav ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                header nav ul li {
                    display: inline;
                    margin-right: 20px;
                }

                    header nav ul li a {
                        color: #ffffff;
                        text-decoration: none;
                        font-size: 1.2em;
                    }

                        header nav ul li a:hover {
                            color: #1abc9c; /* Jasny zielony przy hover */
                        }

        .content {
            margin: 30px auto;
            padding: 20px;
            width: 800px;
            background-color: #34495e; /* Ciemny odcień zieleni */
            border: 2px solid #27ae60; /* Jasny zielony */
            border-radius: 8px;
        }

            .content h1 {
                color: #27ae60; /* Jasny zielony */
                font-size: 2.5em;
                text-align: center;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #27ae60; /* Jasny zielony */
        }

        th {
            background-color: #27ae60; /* Zielony wojskowy nagłówek */
            color: #fff;
        }

        td {
            background-color: #5a5a5a; /* Subtelnie ciemniejsze tło komórek */
            color: #fff;
        }

        tr:hover {
            background-color: #616f39; /* Jaśniejszy odcień zieleni przy najechaniu */
        }

        footer {
            background-color: #2c3e50; /* Ciemny odcień zieleni */
            color: #ffffff;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }

        /* Styl dla wiadomości o błędach */
        .error-message {
            background-color: rgba(231, 76, 60, 0.1);
            color: #e74c3c;
            padding: 10px;
            border: 1px solid #e74c3c;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        /* Styl linku w kolumnie Przypomnienie */
        .reminder-link {
            color: #1abc9c;
            text-decoration: none;
            font-weight: bold;
        }

            .reminder-link:hover {
                color: #34495e;
            }
    </style>
</head>
<body>
    <div class="content">
        <h1>Twój Harmonogram Służb</h1>

        <table>
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Służba</th>
                    <th>Przypomnienie</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Data.ToShortDateString()</td>
                        <td>@(item.Sluzba != null ? item.Sluzba.Rodzaj : "Brak")</td>
                        <td>
                            <a href="@Url.Action("AddReminder", "Schedule", new { idHarmonogram = item.ID_Harmonogram })"
                               class="reminder-link">
                                Dodaj przypomnienie
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        <p>&copy; 2024 Twoja Aplikacja</p>
    </footer>

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</body>
</html>
